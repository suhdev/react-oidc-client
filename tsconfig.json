{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./lib",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["DOM", "ES5", "ES2015.Promise"],
    "skipLibCheck": true,
    "jsx": "react",
    "declaration": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "module": "commonjs",
    "target": "es5"
  },
  "include": ["src"],
  "exclude": ["node_modules", "lib"]
}
